<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @book.desc %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>


<h4> Current Bookmarks: </h4>
<% @book.bookmarks.each do |bookmark| %>
  <p>Some notes about this book mark: <%= bookmark.note %></p>
  <p>made on: <%= bookmark.entry_date %></p>
  <p><%= bookmark.progess %></p>
  <%= link_to 'See progress', book_bookmarks_url(bookmark) %>

<% end %>